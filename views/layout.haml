!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %meta{name: 'author', content:'LeFnord'}
    %meta{name: 'viewport', content:'width=device-width, initial-scale=1.0'}
    
    %link{rel:'stylesheet', type: 'text/css', href:'/css/bootstrap.css'}
    -#%link{rel:'stylesheet', type: 'text/css', href:'/css/bootstrap-theme.css'}
    %link{href:"//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css", rel:"stylesheet"}
    %link{rel:'stylesheet', type: 'text/css', href:'/stylesheets/main.css'}
    
    %link{rel: "shortcut icon", href: url("/images/favicon.ico")}
    %link{rel: "apple-touch-icon", href: url("/images/apple-touch-icon.png")}
    %link{rel: "apple-touch-icon", sizes: "72x72", href: url("/images/apple-touch-icon-72x72.png")}
    %link{rel: "apple-touch-icon", sizes: "114x114", href: url("/images/apple-touch-icon-114x114.png")}
    
    %title .: xmi- viewer : . .
  %body
    %nav.navbar.navbar-fixed-top(role="navigation")
      %div.navbar-header
        %a.navbar-toggle(data-toggle="collapse" data-target=".navbar-collapse")
          %span.icon-list
        %a.navbar-brand(href="/")xmi relation viewer
      %div#head.navbar-nav.collapse.navbar-collapse
      %div.path-input.navbar-nav.collapse.navbar-collapse
        -#%input#path.form-control{type: "text", placeholder: @path, autocomplete: true}
      %div.navbar-nav.navbar-right.collapse.navbar-collapse
        %div.btn
          %a.nav-list(id="LinkList" title="list links" type="button" data-toggle="dropdown")
            %i.icon-link
            links
            %i.icon-caret-down
          %ul#legend.dropdown-menu.scroll-menu(role="menu" aria-labelledby="LinkList")
        %div.btn
          %a.nav-list(id="FileList" title="list files" type="button" data-toggle="dropdown")
            %i.icon-folder-open
            patents
            %i.icon-caret-down
          %ul.dropdown-menu.scroll-menu(role="menu" aria-labelledby="FileList")
            = partial :'partials/docs'
    
    %div#content.container-fluid
      %article= yield
    
  = partial :'partials/javascripts'
  