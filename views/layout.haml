    %nav#navigation.navbar.navbar-default.navbar-fixed-top(role="navigation")
      %div#head.navbar-header
        %a.navbar-toggle(data-toggle="collapse" data-target=".navbar-collapse")
          %span.icon-list
        %a.navbar-brand(href="/")xmi relation viewer
      %div.navbar-nav.navbar-right.collapse.navbar-collapse
        %div.btn-group
          %button.btn.btn-default.dropdown-toggle(title="list files" type="button" data-toggle="dropdown")
            %i.icon-folder-open
            patents
            %i.icon-caret-down
          %ul.dropdown-menu.scroll-menu= partial :'partials/docs'
          
          
    %div.container
      %div#content
        %article= yield
    
